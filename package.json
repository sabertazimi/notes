{
  "name": "notes",
  "version": "5.1.0",
  "packageManager": "pnpm@10.30.1",
  "description": "Personal Learning Notes (TIL)",
  "author": "sabertazimi",
  "license": "MIT",
  "homepage": "https://github.com/sabertazimi/notes#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sabertazimi/notes.git"
  },
  "bugs": {
    "url": "https://github.com/sabertazimi/notes/issues"
  },
  "keywords": [
    "Docusaurus",
    "Notes",
    "CS",
    "AI",
    "Agent",
    "Claude Code",
    "Skills",
    "HTML",
    "CSS",
    "JavaScript",
    "TypeScript",
    "React",
    "Web",
    "TIL"
  ],
  "main": "README.md",
  "scripts": {
    "build": "docusaurus build && cp -rf vercel.json build/",
    "clone": "git clone https://$VERCEL_GIT_PROVIDER.com/$VERCEL_GIT_REPO_OWNER/$VERCEL_GIT_REPO_SLUG && rm -fr .git && cp -fr $VERCEL_GIT_REPO_SLUG/.git . && rm -fr $VERCEL_GIT_REPO_SLUG",
    "clear": "docusaurus clear",
    "dev": "docusaurus start",
    "lint": "pnpm lint:content && pnpm lint:style && pnpm lint:type-check",
    "lint:content": "eslint ./content && stylelint ./content/**/*.md && markdownlint ./content",
    "lint:style": "eslint ./src && stylelint ./src/**/*.css",
    "lint:type-check": "tsc --noEmit",
    "lint:fix": "pnpm lint:content:fix && pnpm lint:style:fix",
    "lint:content:fix": "eslint ./content --fix && stylelint ./content/**/*.md --fix && markdownlint ./content --fix",
    "lint:style:fix": "eslint ./src --fix && stylelint ./src/**/*.css --fix",
    "changeset": "commit-and-tag-version --dry-run -s",
    "release": "commit-and-tag-version -s",
    "serve": "docusaurus serve",
    "prepare": "husky",
    "oj": "vitest",
    "test": "vitest run --coverage"
  },
  "dependencies": {
    "@docusaurus/core": "^3.9.2",
    "@docusaurus/faster": "^3.9.2",
    "@docusaurus/preset-classic": "^3.9.2",
    "@docusaurus/theme-mermaid": "^3.9.2",
    "@easyops-cn/docusaurus-search-local": "^0.55.0",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "katex": "^0.16.28",
    "lucide-react": "^0.575.0",
    "motion": "^12.34.3",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0",
    "tailwind-merge": "^3.5.0",
    "tw-animate-css": "^1.4.0"
  },
  "devDependencies": {
    "@dg-scripts/eslint-config": "^6.1.1",
    "@dg-scripts/stylelint-config": "^6.1.1",
    "@docusaurus/module-type-aliases": "^3.9.2",
    "@docusaurus/theme-classic": "^3.9.2",
    "@docusaurus/tsconfig": "^3.9.2",
    "@docusaurus/types": "^3.9.2",
    "@mdx-js/react": "^3.1.1",
    "@tailwindcss/postcss": "^4.2.0",
    "@types/node": "^24.10.13",
    "@types/react": "^19.2.14",
    "@vitest/coverage-v8": "^4.0.18",
    "c8": "^10.1.3",
    "ci-info": "^4.4.0",
    "commit-and-tag-version": "^12.6.1",
    "consola": "^3.4.2",
    "eslint": "^10.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "stylelint": "^17.3.0",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
